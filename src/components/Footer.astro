---
interface Props {
  lang?: 'en' | 'zh';
}

const { lang = 'en' } = Astro.props;
const isEnglish = lang === 'en';
const currentYear = new Date().getFullYear();
---

<footer>
  <div class="container">
    <div class="footer-content">
      <p>
        © {currentYear} Muggle's AI Coding Path
      </p>
      <p class="tagline">
        {isEnglish 
          ? 'Automate daily office work via AI coding' 
          : '透過 AI Coding 自動化日常辦公工作'}
      </p>
    </div>
  </div>
</footer>

<style>
  footer {
    background-color: var(--color-bg-gray);
    border-top: 1px solid var(--color-border);
    margin-top: 4rem;
    padding: 3rem 0;
  }

  .footer-content {
    text-align: center;
    color: var(--color-text-light);
  }

  .footer-content p {
    margin-bottom: 0.5rem;
  }

  .tagline {
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  .footer-links {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.9rem;
  }

  .footer-links a {
    color: var(--color-text-light);
  }

  .footer-links a:hover {
    color: var(--color-primary);
  }
</style>

