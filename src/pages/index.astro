---
import BaseLayout from '../layouts/BaseLayout.astro';
import CategoryCard from '../components/CategoryCard.astro';
---

<BaseLayout 
  title="Muggle's AI Coding Path - Automate Daily Office Work" 
  description="Learn AI coding to automate boring office tasks. No coding experience needed!"
  lang="en"
>
  <div class="hero">
    <div class="container">
      <h1>ðŸ§™ Muggle's AI Coding Path</h1>
      <p class="tagline">Automate Daily Office Work via AI Coding</p>
      <p class="subtitle">
        Transform boring tasks into automated magic - no coding experience needed!
      </p>
    </div>
  </div>

  <section class="categories">
    <div class="container">
      <h2 class="section-title">Choose Your Office Scenario</h2>
      <p class="section-subtitle">
        Select the environment you work in most, and start automating
      </p>
      
      <div class="cards-grid">
        <CategoryCard
          emoji="â˜ï¸"
          title="On The Cloud"
          description="Automate Google Workspace tasks"
          examples={[
            "Google Docs automation",
            "Google Sheets processing",
            "Google Drive management"
          ]}
          link="/blog?category=cloud"
          lang="en"
        />
        
        <CategoryCard
          emoji="ðŸ’»"
          title="On Your Desktop"
          description="Automate Microsoft Office applications"
          examples={[
            "Word document generation",
            "Outlook email automation",
            "Excel data processing"
          ]}
          link="/blog?category=desktop"
          lang="en"
        />
        
        <CategoryCard
          emoji="ðŸŒ"
          title="Build Web Tools"
          description="Create custom web applications"
          examples={[
            "Payment search system",
            "Data dashboard",
            "Custom automation tools"
          ]}
          link="/blog?category=web"
          lang="en"
        />
      </div>
    </div>
  </section>

  <section class="resources">
    <div class="container">
      <div class="resources-grid">
        <div class="resource-card">
          <h3>ðŸ“š Core Concepts for Muggles</h3>
          <p>Essential knowledge to get started with AI coding</p>
          <ul>
            <li>Git basics for version control</li>
            <li>API fundamentals</li>
            <li>Authorization & security</li>
            <li>And more...</li>
          </ul>
          <a href="/core-concepts" class="btn btn-primary">
            Learn the Basics
          </a>
        </div>

        <div class="resource-card">
          <h3>ðŸ’¡ More Cases & Inspiration</h3>
          <p>Explore video demos and expand your imagination</p>
          <ul>
            <li>50+ automation examples</li>
            <li>Video demonstrations</li>
            <li>GitHub repositories</li>
            <li>Quick introductions</li>
          </ul>
          <a href="/blog" class="btn btn-primary">
            Explore All Cases
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 4rem 0;
    text-align: center;
  }

  .hero h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .tagline {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .subtitle {
    font-size: 1.125rem;
    opacity: 0.9;
    max-width: 600px;
    margin: 0 auto;
  }

  .categories {
    padding: 4rem 0;
  }

  .section-title {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .section-subtitle {
    text-align: center;
    color: var(--color-text-light);
    margin-bottom: 3rem;
  }

  .cards-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .resources {
    padding: 4rem 0;
    background-color: var(--color-bg-gray);
  }

  .resources-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .resource-card {
    background: white;
    padding: 2rem;
    border-radius: 1rem;
    box-shadow: var(--shadow-md);
  }

  .resource-card h3 {
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .resource-card p {
    color: var(--color-text-light);
    margin-bottom: 1.5rem;
  }

  .resource-card ul {
    list-style: none;
    margin-bottom: 2rem;
  }

  .resource-card li {
    padding: 0.5rem 0;
    color: var(--color-text);
  }

  .resource-card li::before {
    content: 'â†’ ';
    color: var(--color-primary);
    font-weight: bold;
    margin-right: 0.5rem;
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
    }

    .tagline {
      font-size: 1.25rem;
    }

    .subtitle {
      font-size: 1rem;
    }

    .cards-grid,
    .resources-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

